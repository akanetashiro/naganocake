
    <div class="col-md-8 offset-md-1">
      <h2>商品詳細</h2>
      <table class="table table-hover table-inverse">
        <th>商品名</th>
        <td><%= item.name %></td>
        <th>商品説明</th>
        <td><%= item.introduction %></td>
        <th>ジャンル</th>
        <td><%= item.genre %></td>
        <th>税込価格<br>税抜き価格</th>
        <td><%= item.price %></td>
        <th>販売ステータス</th>
        <td><%= item.is_active %></td>
        
        <% if @item.user == current_user %>
              <%= link_to "編集する", edit_admin_item_path, class:"btn btn-sm btn-success" %>
        <% end %>